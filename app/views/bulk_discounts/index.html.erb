<h1>All Discounts</h1>
<%= button_to "New Discount", "/merchant/#{@merchant.id}/bulk_discounts/new", method: :get, params: {merchant_id: @merchant.id} %>
<ul>
  <% @merchant.bulk_discounts.each do |discount| %>
    <section id='discount-<%= discount.id %>'>
      <li><%= link_to "#{discount.percent}", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}" %> percent off of <%= discount.threshold %> or more items</li>
      <%= button_to "Delete Discount", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %>
    </section>
  <% end %>
</ul>
