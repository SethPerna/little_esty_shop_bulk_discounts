<%= form_with url: "/merchant/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :percent %>
  <%= f.text_field :percent, value: @bulk_discount.percent %>
  <%= f.label :threshold %>
  <%= f.text_field :threshold, value: @bulk_discount.threshold %>

  <%= f.submit "Submit" %>
<% end %>
